<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            style="@style/padded_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/small_padded" />

        <TextView
            style="@style/padded_xlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/big" />

        <TextView
            style="@style/padded_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/normal_w_parent_color" />

        <TextView
            style="@style/padded_italics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/italic_w_parent_color" />

        <TextView
            style="@style/glow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/glow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/normal" />
    </LinearLayout>
</LinearLayout>